@model IEnumerable<InternalResourceBookingSystem.Models.Resource>

@{
    ViewData["Title"] = "Resources";
}

<h2>Resources</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">+ Add New Resource</a>

</p>

<form method="get" class="mb-3">
    <input type="text" name="searchName" value="@(Context.Request.Query["searchName"])"
           class="form-control" placeholder="Search resource by name..." />
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Available</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td>@item.Capacity</td>
                <td>@(item.IsAvailable ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">View</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
